<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-pink-500 to-red-600">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="text-3xl font-extrabold mb-6 text-center text-gray-800">Create an Account</h2>

      <div class="mb-6">
        <%= f.label :email, class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-3 rounded-lg border focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= f.password_field :password, class: "w-full px-4 py-3 rounded-lg border focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 rounded-lg border focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit "Sign up", class: "bg-red-600 hover:bg-red-800 text-white font-bold py-3 px-8 rounded-full focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>

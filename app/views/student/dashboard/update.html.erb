<h1>Edit Profile</h1>

<%= form_for [:student, @user], url: student_update_profile_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email_id %>
    <%= f.email_field :email_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :dept %>
    <%= f.text_field :dept, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :program_type %>
    <%= f.text_field :program, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :roll_no %>
    <%= f.text_field :roll_no, class: 'form-control' %>
  </div>

  <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
<% end %>

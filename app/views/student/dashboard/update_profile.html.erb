<div class="max-w-md mx-auto bg-white p-8 shadow-md rounded-md">
  <h2 class="text-2xl font-semibold mb-6">Student Information Form</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)), method: :patch, class: 'space-y-4') do |form| %>
    <div>
      <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :name, class: 'mt-1 p-2 border rounded-md w-full' %>
    </div>
    <div>
      <%= form.label :email_id, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.email_field :email_id, class: 'mt-1 p-2 border rounded-md w-full' %>
    </div>
    <div>
      <%= form.label :Department, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :dept, class: 'mt-1 p-2 border rounded-md w-full' %>
    </div>
    <div>
      <%= form.label :roll_no, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :roll_no, class: 'mt-1 p-2 border rounded-md w-full' %>
    </div>
    <div>
      <%= form.label :program, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.select :program, options_for_select(['B.Tech', 'M.Tech', 'PhD']), { prompt: 'Select program type' }, class: 'mt-1 p-2 border rounded-md w-full' %>
    </div>
    <div>
      <%= form.label :cgpa, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.number_field :cgpa, step: 0.1, class: 'mt-1 p-2 border rounded-md w-full' %>
    </div>
    <div>
      <%= form.submit 'Submit', class: 'bg-blue-500 text-white p-2 rounded-md w-full' %>
    </div>
  <% end %>
</div>

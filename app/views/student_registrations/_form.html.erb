<%= form_with(model: student_registration) do |form| %>
  <% if student_registration.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student_registration.errors.count, "error") %> prohibited this student_registration from being saved:</h2>

      <ul>
        <% student_registration.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded shadow-md w-96">
    <h1 class="text-3xl font-bold mb-6 text-center">Course Registration</h1>
      <div class="mb-4">
        <%= form.label :student_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :student_name, value: current_user.student_profile.name, readonly: true, class: "form-input w-full px-4 py-2 rounded-md border focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :course_code, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.select :course_code, @available_courses.map { |course| [course.course_title, course.course_code] }, {}, class: "form-select w-full px-4 py-2 rounded-md border focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "Register", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>
      </div>
  </div>
</div>
<% end %>

<div class="bg-white p-4 rounded-md">
    <h2 class="text-2xl font-semibold mb-4">Create a New Course</h2>
    <%= form_with(model: @course) do |f| %>
      <div>
        <%= f.label :course_title, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :course_title, class: 'mt-1 p-2 border rounded-md w-full' %>
      </div>

      <div>
        <%= f.label :course_code, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :course_code, class: 'mt-1 p-2 border rounded-md w-full' %>
      </div>

      <div>
        <%= f.label :instructor, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :instructor, class: 'mt-1 p-2 border rounded-md w-full' %>
      </div>

      <div>
        <%= f.label :schedule, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.text_field :schedule, class: 'mt-1 p-2 border rounded-md w-full' %>
      </div>

      <div>
        <%= f.label :credits, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.number_field :credits, class: 'mt-1 p-2 border rounded-md w-full' %>
      </div>

      <div>
        <%= f.label :max_students, class: 'block text-sm font-medium text-gray-700' %>
        <%= f.number_field :max_students, class: 'mt-1 p-2 border rounded-md w-full' %>
      </div>

      <div>
        <%= f.submit 'Create Course', class: 'bg-blue-500 text-white p-2 rounded-md w-full' %>
      </div>
    <% end %>
</div>